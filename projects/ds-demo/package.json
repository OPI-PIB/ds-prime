{
	"name": "ds-demo",
	"version": "0.0.0",
	"scripts": {
		"ng": "ng",
		"start": "ng serve",
		"start:prod": "ng serve --configuration production",
		"build": "ng build --base-href /ds-demo/ --deploy-url /ds-demo/",
		"watch": "ng build --watch --configuration development",
		"test": "ng test",
		"test:e2e": "playwright test",
		"test:e2e:update": "playwright test --update-snapshots",
		"test:e2e:debug": "playwright test --ui",
		"translate:build": "translate build --source=\"./src/app/**/*+(.ts|.html)\" --i18n=./public/i18n --langs=en --langs=pl"
	},
	"prettier": "@opi_pib/prettier-config-base/ng",
	"engines": {
		"node": ">=24.0.0",
		"npm": ">=10.8.0"
	},
	"private": true,
	"packageManager": "npm@11.5.1",
	"dependencies": {
		"@angular/common": "^21.0.0",
		"@angular/compiler": "^21.0.0",
		"@angular/core": "^21.0.0",
		"@angular/forms": "^21.0.0",
		"@angular/platform-browser": "^21.0.0",
		"@angular/router": "^21.0.0",
		"@ngx-translate/core": "^17.0.0",
		"@ngx-translate/http-loader": "^17.0.0",
		"@opi_pib/ds": "^1.0.0",
		"@opi_pib/ngx-i18n": "^21.0.0",
		"@tailwindcss/postcss": "^4.0.0",
		"culori": "^4.0.0",
		"postcss": "^8.0.0",
		"primeng": "^21.0.0",
		"rxjs": "~7.8.0",
		"tailwindcss": "^4.0.0",
		"tslib": "^2.3.0"
	},
	"devDependencies": {
		"@angular/build": "^21.0.0",
		"@angular/cli": "^21.0.0",
		"@angular/compiler-cli": "^21.0.0",
		"@axe-core/playwright": "^4.0.0",
		"@opi_pib/eslint-config-base": "^9.0.0",
		"@opi_pib/node-translate": "^2.0.0",
		"@opi_pib/prettier-config-base": "^1.0.0",
		"@opi_pib/stylelint-config-base": "^1.0.0",
		"@playwright/test": "^1.0.0",
		"@types/culori": "^4.0.0",
		"jsdom": "^27.1.0",
		"prettier-plugin-tailwindcss": "^0.7.0",
		"typescript": "~5.9.2",
		"vitest": "^4.0.8"
	}
}
